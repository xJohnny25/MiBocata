<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paredblanca">

    <View
        android:id="@+id/hotSandwichCountBox"
        android:layout_width="178dp"
        android:layout_height="139dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.85"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/apporange"
        app:layout_constraintBottom_toTopOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.797" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:alpha="1"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/userAccountIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="@string/user_account_png"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:srcCompat="@drawable/useraccount" />

    <ImageView
        android:id="@+id/invoiceIcon"
        android:layout_width="72dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toStartOf="@+id/userAccountIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:srcCompat="@drawable/invoice" />

    <ImageView
        android:id="@+id/calendarIcon"
        android:layout_width="72dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userAccountIcon"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:srcCompat="@drawable/calendar" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="126dp"
        android:layout_height="83dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/logo" />

    <View
        android:id="@+id/coldSandwichCountBox"
        android:layout_width="178dp"
        android:layout_height="139dp"
        android:layout_marginStart="8dp"
        android:alpha="0.85"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/appgreen"
        app:layout_constraintBottom_toTopOf="@+id/view11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.797" />

    <TextView
        android:id="@+id/coldSandwichCount"
        android:layout_width="169dp"
        android:layout_height="83dp"
        android:fontFamily="@font/poppins"
        android:text="Bocadillo salchichón"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/coldSandwichCountBox"
        app:layout_constraintEnd_toEndOf="@+id/coldSandwichCountBox"
        app:layout_constraintStart_toStartOf="@+id/coldSandwichCountBox"
        app:layout_constraintTop_toTopOf="@+id/coldSandwichCountBox" />

    <TextView
        android:id="@+id/coldSandwichCount2"
        android:layout_width="169dp"
        android:layout_height="83dp"
        android:fontFamily="@font/poppins"
        android:text="Bocadillo calamares"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/hotSandwichCountBox"
        app:layout_constraintEnd_toEndOf="@+id/hotSandwichCountBox"
        app:layout_constraintStart_toStartOf="@+id/hotSandwichCountBox"
        app:layout_constraintTop_toTopOf="@+id/hotSandwichCountBox" />

    <View
        android:id="@+id/view11"
        android:layout_width="wrap_content"
        android:layout_height="426dp"
        android:alpha="0.9"
        android:background="#FAF3F3"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sandwichRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins"
        android:text="ESTA SEMANA:"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view11"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/divider"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:alpha="1"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="add"
        android:clickable="false"
        android:foregroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view11"
        app:layout_constraintVertical_bias="0.205" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/irish"
        android:text="PARA MAÑANA:"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="0dp"
        android:layout_height="325dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="15dp"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

</androidx.constraintlayout.widget.ConstraintLayout>